block content
    .registration-failure-form.modal
        .modal-content
            h4 Registrera konto
            form(action ='/signup', method = 'post', enctype='application/x-www-form-urlencoded')
                .input-field
                    input(id = 'username-register', name ='username', type = 'text')
                    label(for = 'username-register') Välj ett användarnamn
                .input-field
                    input(id = 'password-register', name ='password',type = 'password')
                    label(for = 'password-register') Välj ett lösenord
                .errorReg-div
                    p #{errormessage}
                .modal-footer
                    button(class = 'waves-effect waves-green btn-flat',id = 'register-button', type = 'submit', value = 'Submit') Registrera konto
                    a(href ='/', class = 'modal-action modal-close waves-effect waves-green btn-flat') Avbryt
